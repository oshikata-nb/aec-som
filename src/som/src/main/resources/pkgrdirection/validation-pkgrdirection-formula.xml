<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>


    <global>

    </global>

    <formset>

<!--==================================== 配合詳細 ====================================-->
		<!-- PkgRdirectionFormulaDetailForm -->
        <form name="pkgRdirectionFormulaDetailForm">
			<!-- 包装条件 -->
			<field property="stepCondition" depends="maxlength">
				<arg0 key="item.pkgrdirection.formula.step.condition" />
				<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>100</var-value>
				</var>
			</field>
			<!-- 備考 -->
			<field property="remark" depends="maxlength">
				<arg0 key="item.pkgrdirection.formula.remark" />
				<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>200</var-value>
				</var>
			</field>
			<!-- 注釈 -->
			<field property="notes" depends="maxlength">
				<arg0 key="item.pkgrdirection.formula.notes" />
				<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>256</var-value>
				</var>
			</field>
		</form>

<!--==================================== ここより上に記入 ====================================-->

    </formset>

</form-validation>
