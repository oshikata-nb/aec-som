<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

	<!--
		This is a minimal Validator form file with a couple of examples.
	-->

	<global>
		<!-- よく使いそうな正規表現、数字等はここで一元管理しましょう -->
	</global>

	<formset>

		<!--==================================== ここからdepositPlanListForm ====================================-->
		<!-- depositPlanList -->
		<form name="depositPlanListForm">
			<!-- 請求日付From -->
			<field property="srhCreditDateFrom" depends="date">
				<arg key="item.credit.date.from" />
				<var>
					<var-name>datePatternStrict</var-name>
					<var-value>yyyy/MM/dd</var-value>
				</var>
			</field>
			<!-- 請求日付To -->
			<field property="srhCreditDateTo" depends="date">
				<arg key="item.credit.date.to" />
				<var>
					<var-name>datePatternStrict</var-name>
					<var-value>yyyy/MM/dd</var-value>
				</var>
			</field>
			<!-- 検索条件：請求日付 大小関係 -->
			<field property="srhCreditDateTo" depends="compareif">
				<msg name="compareif" key="errors.compare" />
				<arg0 key="item.credit.date.from" />
				<arg1 key="item.credit.date.to" />
				<var>
					<var-name>field[0]</var-name>
					<var-value>op</var-value>
				</var>
				<var>
					<var-name>fieldValue[0]</var-name>
					<var-value>${op_search}</var-value>
				</var>
				<var>
					<var-name>fieldTest[0]</var-name>
					<var-value>EQUAL</var-value>
				</var>
				<var>
					<var-name>field[1]</var-name>
					<var-value>srhCreditDateFrom</var-value>
				</var>
				<var>
					<var-name>fieldTest[1]</var-name>
					<var-value>NOTNULL</var-value>
				</var>
				<var>
					<var-name>field[2]</var-name>
					<var-value>srhCreditDateTo</var-value>
				</var>
				<var>
					<var-name>fieldTest[2]</var-name>
					<var-value>NOTNULL</var-value>
				</var>
				<var>
					<var-name>fieldJoin</var-name>
					<var-value>AND</var-value>
				</var>
				<var>
					<var-name>targetField</var-name>
					<var-value>srhCreditDateFrom</var-value>
				</var>
				<var>
					<var-name>compareType</var-name>
					<var-value>GREATEREQUAL</var-value>
				</var>
			</field>
			<!-- 入金予定日From -->
			<field property="srhCreditScheduledDateFrom"
				depends="date">
				<arg key="item.credit.scheduled.date.from" />
				<var>
					<var-name>datePatternStrict</var-name>
					<var-value>yyyy/MM/dd</var-value>
				</var>
			</field>
			<!-- 入金予定日To -->
			<field property="srhCreditScheduledDateTo" depends="date">
				<arg key="item.credit.scheduled.date.to" />
				<var>
					<var-name>datePatternStrict</var-name>
					<var-value>yyyy/MM/dd</var-value>
				</var>
			</field>
			<!-- 検索条件：入金予定日 大小関係 -->
			<field property="srhCreditScheduledDateTo"
				depends="compareif">
				<msg name="compareif" key="errors.compare" />
				<arg0 key="item.credit.scheduled.date.from" />
				<arg1 key="item.credit.scheduled.date.to" />
				<var>
					<var-name>field[0]</var-name>
					<var-value>op</var-value>
				</var>
				<var>
					<var-name>fieldValue[0]</var-name>
					<var-value>${op_search}</var-value>
				</var>
				<var>
					<var-name>fieldTest[0]</var-name>
					<var-value>EQUAL</var-value>
				</var>
				<var>
					<var-name>field[1]</var-name>
					<var-value>srhCreditScheduledDateFrom</var-value>
				</var>
				<var>
					<var-name>fieldTest[1]</var-name>
					<var-value>NOTNULL</var-value>
				</var>
				<var>
					<var-name>field[2]</var-name>
					<var-value>srhCreditScheduledDateTo</var-value>
				</var>
				<var>
					<var-name>fieldTest[2]</var-name>
					<var-value>NOTNULL</var-value>
				</var>
				<var>
					<var-name>fieldJoin</var-name>
					<var-value>AND</var-value>
				</var>
				<var>
					<var-name>targetField</var-name>
					<var-value>srhCreditScheduledDateFrom</var-value>
				</var>
				<var>
					<var-name>compareType</var-name>
					<var-value>GREATEREQUAL</var-value>
				</var>
			</field>
		</form>


		<!--==================================== ここより上に記入 ====================================-->

	</formset>


</form-validation>
